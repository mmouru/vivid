<%- include("partials/header") %>

<div class="login-form">
    <form action="/register" method="POST">
        <h2 class="text-center">Register new account</h2>   
        <div class="form-group">
        	<input type="text" class="form-control" name="username" placeholder="Username">
        </div>
		<div class="form-group">
            <input type="password" class="form-control" name="password" placeholder="Password">
        </div>        
        <div class="form-group">
            <button type="submit" id="regbutton" class="btn btn-primary btn-lg btn-block">Register</button>
        </div>
		<p class="text-center small">Already have account? <a href="/login">Login here!</a></p>
    </form>
</div>


<%- include("partials/footer") %>